<%- model_class = Visit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ip_address) %>:</strong></dt>
  <dd><%= @visit.ip_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visitor_email) %>:</strong></dt>
  <dd><%= @visit.visitor_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:referrer) %>:</strong></dt>
  <dd><%= @visit.referrer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:link_item_id) %>:</strong></dt>
  <dd><%= @visit.link_item_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              visits_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_visit_path(@visit), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              visit_path(@visit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
